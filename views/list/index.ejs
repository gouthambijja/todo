<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>kakarot todo app</title>
    <link rel="stylesheet" href="index.css" />

  </head>
  <body>
    <h1>To Do List App!!</h1>
    <main>
    <div>
      <form action="/kakarot" method="post" autocomplete="off">
        <label for="username">username</label>
        <input
          type="text"
          name="username"
          id="username"
          placeholder="username"
          autocomplete="off"
          required
          
        />
        <br />
        <label class="password-margin" for="password">password</label>
        <input
          type="password"
          name="password"
          id="password"
          placeholder="password"
          autocomplete="off"
          required
        />
        <input class="password-visibility" type="checkbox" id="togglePassword" onclick="myFunction()">
        <label for="togglePassword">show password</label>
          <BR></BR>
        <div class="login-signup">
        <button type="submit">login</button>
        <a href="/kakarot/signup" class="a-signup">sign_up</a>
        </div>
      </form>
    </div>
    <script>
      function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}

    </script>
  </main>
  </body>
</html>
